<component name="GridScreen" extends="ListPanel">
    <script type="text/brightscript" uri="pkg:/components/GridScreen/GridScreen.brs" />
    <interface>
        <!-- Specifies the content for the Grid -->
        <field id="content" type="node" alias="rowList.content" />
    </interface>
    <children>
        <!-- Label with title and length of content -->
        <RowList
            id="rowList"
            itemComponentName="RowListItemComponent"
            numRows="3"
            itemSize="[1100,360]"
            itemSpacing="[0,10]"
            rowItemSize="[[300,270]]"
            rowItemSpacing="[[30,0]]"
            showRowCounter="[true]"
            rowLabelOffset="[[50,20]]"
            focusXOffset="[50]"
            focusBitmapBlendColor="#139BCC"
            showRowLabel="[true]" />
    </children>
</component>