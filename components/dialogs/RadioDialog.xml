<?xml version="1.0" encoding="utf-8"?>

<component name="RadioDialog" extends="StandardDialog" initialFocus="buttonArea">

    <script type="text/brightscript" uri="pkg:/components/dialogs/RadioDialog.brs" />

    <interface>
        <field id="selectedValue" type="string" />
        <field id="values" type="assocarray" />
        <field id="title" type="string" />
    </interface>

    <children>
        <StdDlgTitleArea id="dialogTitle" />
        <StdDlgContentArea>
            <StdDlgItemGroup id="radioButtons" />
        </StdDlgContentArea>
        <StdDlgButtonArea id="buttonArea">
            <StdDlgButton text="OK" />
            <StdDlgButton text="Cancel" />
        </StdDlgButtonArea>
    </children>

</component>