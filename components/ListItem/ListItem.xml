<?xml version="1.0" encoding="UTF-8"?>

<component name="ListItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
    </interface>
    <script type="text/brightscript" uri="ListItem.brs" />
    <children>
        <LayoutGroup
            id="group"
            itemSpacings="20"
            translation="[20,20]"
            focusable="true"
            layoutDirection="horiz"
        >
            <LayoutGroup
                itemSpacings="20">
                <Label
                    id="title"
                    width="1000"
                    maxLines="1"
                    wrap="true"
                    font="font:MediumSystemFont"
                    color="#444444"
                />
                <Label
                    id="neighbourhood"
                    width="1000"
                    maxLines="1"
                    wrap="true"
                    font="font:SmallestSystemFont"
                    color="#444444"
                />
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>