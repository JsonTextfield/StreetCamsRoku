<component name="ListItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="OnContentSet" />
        <field id="isFocused" type="boolean" onChange="FocusChanged" />
    </interface>
    <script type="text/brightscript" uri="ListItem.brs" />
    <children>
        <LayoutGroup itemSpacings="20" translation="[20,20]">
            <Label
                id="title"
                width="1000"
                maxLines="1"
                wrap="true"
                font="font:MediumSystemFont"
                color="#444444"
            />
            <Label
                id="neighbourhood"
                width="1000"
                maxLines="1"
                wrap="true"
                font="font:SmallestSystemFont"
                color="#444444"
            />
        </LayoutGroup>
    </children>
</component>